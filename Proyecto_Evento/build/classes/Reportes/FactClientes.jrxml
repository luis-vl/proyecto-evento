	<queryString>
		<![CDATA[select 
c.nombre as Nombre_Cliente,
((e.cantidad_personas*e.precio_boleto*e.duracion)+(sum(es.precio))+(e.precio_salon)) as Total_Pagar

from evento e
inner join cliente c
on c.id_cliente=e.id_cliente
inner join evento_servicio es 
on es.id_evento=e.id_evento
inner join venta_boleto vb
on vb.id_evento=e.id_evento
inner join salon sa on 
sa.id_salon=e.id_salon

group by c.nombre ]]>
	</queryString>
